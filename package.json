{
    "name": "openOS-myShop",
    "version": "0.0.1",
    "description": "A school project for shopping",
    "author": "Thanh Nguyen",
    "license": "MIT",
    "engines": {
        "node": ">=8.0.0",
        "npm": ">=3.8"
    },
    "scripts": {
        "postinstall": "cd client-simple && npm install",
        "start": "NODE_ENV=production node dist/bin/www.js",
        "build": "rimraf dist && cross-env NODE_ENV=production babel src -d dist -s",
        "dev": "nodemon src/bin/www.js",
        "test": "cross-env NODE_ENV=test jest",
        "cover": "npm run test -- --coverage",
        "lint": "eslint --fix src && prettier --write \"src/**/*.js\"",
        "precommit": "lint-staged",
        "seed": "npm run build && node dist/bin/seedDb.js"
    },
    "dependencies": {
        "@koa/cors": "^2.2.1",
        "awilix": "^2.12.0",
        "awilix-koa": "^1.0.3",
        "axios": "^0.17.1",
        "basic-auth": "^2.0.0",
        "bristol": "^0.3.3",
        "chance": "^1.0.12",
        "fejl": "^1.0.2",
        "keyblade": "^0.3.2",
        "koa": "^2.4.1",
        "koa-bodyparser": "^4.2.0",
        "koa-compress": "^2.0.0",
        "koa-respond": "^1.0.1",
        "koa-router": "^7.3.0",
        "koa-static": "^4.0.2",
        "lodash": "^4.17.4",
        "mongoose": "^4.13.6",
        "node": "^9.2.0",
        "node-fetch": "^1.7.3",
        "palin": "^2.2.0",
        "yenv": "^1.0.6"
    },
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "babel-eslint": "^8.0.1",
        "babel-plugin-source-map-support": "^1.0.0",
        "babel-plugin-transform-object-rest-spread": "^6.26.0",
        "babel-plugin-transform-runtime": "^6.23.0",
        "babel-preset-env": "^1.6.1",
        "cross-env": "^5.1.1",
        "eslint": "^4.10.0",
        "eslint-config-prettier": "^2.7.0",
        "eslint-config-standard": "^10.2.1",
        "eslint-plugin-import": "^2.8.0",
        "eslint-plugin-jest": "^21.2.0",
        "eslint-plugin-node": "^5.2.1",
        "eslint-plugin-promise": "^3.6.0",
        "eslint-plugin-standard": "^3.0.1",
        "husky": "^0.14.3",
        "jest": "^21.2.1",
        "lint-staged": "^5.0.0",
        "nodemon": "^1.12.1",
        "prettier": "^1.7.4",
        "rimraf": "^2.6.2",
        "smid": "^0.1.1"
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "plugins": [
            "jest"
        ],
        "extends": [
            "standard",
            "prettier",
            "plugin:jest/recommended"
        ],
        "env": {
            "jest/globals": true
        }
    },
    "prettier": {
        "singleQuote": true,
        "semi": false,
        "indent": "space",
        "tabWidth": 4
    },
    "lint-staged": {
        "*.js": [
            "prettier --write",
            "git add"
        ]
    },
    "nodemonConfig": {
        "execMap": {
            "js": "babel-node"
        }
    },
    "jest": {
        "mapCoverage": true,
        "testMatch": [
            "**/__tests__/**/*.test.js"
        ],
        "testEnvironment": "node",
        "collectCoverageFrom": [
            "src/**/*.js"
        ],
        "coveragePathIgnorePatterns": [
            "/node_modules/",
            "__tests__",
            "src/lib/env",
            "src/bin"
        ]
    },
    "babel": {
        "sourceMaps": "both",
        "plugins": [
            "transform-runtime",
            "transform-object-rest-spread"
        ],
        "presets": [
            [
                "env",
                {
                    "targets": {
                        "node": "current"
                    }
                }
            ]
        ],
        "env": {
            "production": {
                "plugins": [
                    "source-map-support"
                ],
                "ignore": [
                    "**/__tests__/**"
                ]
            }
        }
    }
}
